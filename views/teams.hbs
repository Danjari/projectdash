<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Team Members</title>
  <link rel="stylesheet" href="/site.css">
</head>
<body>
  <header>
    <nav>
      <a href="/">Home</a>
      <a href="/dashboard">Dashboard</a>
      <a href="/teams">My Team</a>
    </nav>
  </header>

  <main>
    <div class="project-details">
      <h1>Team Members for "{{team.name}}"</h1>

      <table>
        <thead>
          <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Role</th>
          </tr>
        </thead>
        <tbody>
          {{#each team.members}}
          <tr>
            <td>{{this.username}}</td>
            <td>{{this.email}}</td>
            <td>{{this.role}}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>

      {{#if isAdmin}}
      <!-- Invitation form for admins -->
      <h2>Invite a Member</h2>
      <form action="/invite" method="POST">
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required>
        <button type="submit">Send Invitation</button>
      </form>
      {{/if}}

      <a href="/dashboard" class="view-project-button">Back to Dashboard</a>
    </div>
  </main>
</body>
</html>